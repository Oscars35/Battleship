<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/mainImageGif"
        android:layout_width="2000dp"
        android:layout_height="3000dp"
        android:src="@drawable/pixelboat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54" />

    <GridView
        android:id="@+id/shipSelectorGridView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/boatImagesIv" />

    <ImageView
        android:id="@+id/boatImagesIv"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:src="@drawable/woodboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipsPositionsTv" />

    <ImageView
        android:id="@+id/boatTwo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/boat2"
        app:layout_constraintBottom_toBottomOf="@+id/boatImagesIv"
        app:layout_constraintEnd_toEndOf="@+id/boatImagesIv"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="@+id/boatImagesIv"
        app:layout_constraintTop_toTopOf="@+id/boatImagesIv"
        app:layout_constraintVertical_bias="0.479" />

    <ImageView
        android:id="@+id/boatThree"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/boat3"
        app:layout_constraintBottom_toBottomOf="@+id/boatImagesIv"
        app:layout_constraintEnd_toEndOf="@+id/boatImagesIv"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toStartOf="@+id/boatImagesIv"
        app:layout_constraintTop_toTopOf="@+id/boatImagesIv"
        app:layout_constraintVertical_bias="0.49" />

    <ImageView
        android:id="@+id/boatOne"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/appboat"
        app:layout_constraintBottom_toBottomOf="@+id/boatImagesIv"
        app:layout_constraintEnd_toEndOf="@+id/boatImagesIv"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/boatImagesIv"
        app:layout_constraintTop_toTopOf="@+id/boatImagesIv"
        app:layout_constraintVertical_bias="0.479" />

    <TextView
        android:id="@+id/availableShipsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/pirata_one"
        android:text="@string/available_ships"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/boatImagesIv" />

    <TextView
        android:id="@+id/threeBlocksOneTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pirata_one"
        android:text="@string/three_blocks"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/boatImagesIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/boatImagesIv"
        app:layout_constraintTop_toTopOf="@+id/boatImagesIv"
        app:layout_constraintVertical_bias="0.626" />

    <TextView
        android:id="@+id/fourBlocksOneTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pirata_one"
        android:text="@string/four_blocks"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/boatImagesIv"
        app:layout_constraintEnd_toEndOf="@+id/boatImagesIv"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/boatImagesIv"
        app:layout_constraintTop_toTopOf="@+id/boatImagesIv"
        app:layout_constraintVertical_bias="0.626" />

    <TextView
        android:id="@+id/threeBlocksTwoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pirata_one"
        android:text="@string/three_blocks"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/boatImagesIv"
        app:layout_constraintEnd_toEndOf="@+id/boatImagesIv"
        app:layout_constraintHorizontal_bias="0.883"
        app:layout_constraintStart_toStartOf="@+id/boatImagesIv"
        app:layout_constraintTop_toBottomOf="@+id/shipsPositionsTv"
        app:layout_constraintVertical_bias="0.626" />

    <TextView
        android:id="@+id/shipsPositionsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:fontFamily="@font/pirata_one"
        android:text="@string/ships_positions"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>